      <script>
        const ctx = document.getElementById('myChart');
      
        new Chart(ctx, {
          type: 'bar',
          data: {
            labels: ['monday', 'tuesday', 'wenesday', 'thrusday', 'friday', 'saturday', 'sunday'],
            datasets: [{
              label: '# of hours spent at the gym',
                data: [1,1,2,1,0,3,0],
              borderWidth: 2
            }]
          },
          options: {
            scales: {
              y: {
                beginAtZero: true,
                min: 0,
                max:5,
              }
            }
          }
        });
      </script>